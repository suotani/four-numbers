


<%= form_with url: tweets_path, method: "post" do |f| %>
  <div class="form-group">
    <%= f.text_field :memo, class: "form-control" %>
  </div>
  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>

<table class="table">
  <% @tweets.each do |t| %>
    <tr>
      <td><%= t.memo %></td>
    </tr>
  <% end %>
</table>